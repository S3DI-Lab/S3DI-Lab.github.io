---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
  </header>
  {% comment %} {% if page.github_username %}
    {% capture link %}https://github.com/{{ page.github_username }}{% endcapture %}
    {% assign sameaslinks = sameaslinks | push: link %}
  {% endif %}
  {% if page.scholar_userid %}
    {% capture link %}https://scholar.google.com/citations?user={{ page.scholar_userid }}{% endcapture %}
    {% assign sameaslinks = sameaslinks | push: link %}
  {% endif %} {% endcomment %}

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
